<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_changepw" >

 

    <LinearLayout
        android:id="@+id/change_passwd_no"
        android:layout_width="218px"
        android:layout_height="52px"
        android:layout_marginTop="456px"
        android:layout_marginLeft="132px"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_weight="1"
            android:src="@drawable/btn_no"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_gravity="center_vertical|right"
            android:layout_weight="1"
            android:textSize="40px"
            android:text="@string/NO" />
    </LinearLayout>

       <LinearLayout
        android:id="@+id/change_passwd_yes"
        android:layout_width="218px"
        android:layout_height="52px"
        android:layout_marginTop="538px"
        android:layout_marginLeft="132px"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_weight="1"
            android:src="@drawable/btn_yes"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_gravity="center_vertical|left"
            android:layout_weight="1"
            android:textSize="40px"
            android:text="@string/YES" />
    </LinearLayout>
</RelativeLayout>