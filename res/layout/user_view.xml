<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_user" >

    <TextView
        android:id="@+id/user_cost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="176px"
        android:gravity="right"
        android:paddingRight="20px"
        android:textSize="120sp" />

    <TextView
        android:id="@+id/user_water"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="485px"
        android:gravity="right"
        android:paddingRight="20px"
        android:textSize="100sp" />

    <Button
        android:id="@+id/user_3l"
        android:layout_width="120px"
        android:layout_height="120px"
        android:layout_marginLeft="188px"
        android:layout_marginTop="@dimen/user_margin_top_volume"
        android:background="@drawable/water0"
        android:focusable="false" />

    <Button
        android:id="@+id/user_5l"
        android:layout_width="120px"
        android:layout_height="120px"
        android:layout_marginLeft="40px"
        android:layout_marginTop="@dimen/user_margin_top_volume"
        android:background="@drawable/water1"
        android:focusable="false" />

    <Button
        android:id="@+id/user_charge"
        android:layout_width="120px"
        android:layout_height="120px"
        android:layout_marginLeft="332px"
        android:layout_marginTop="@dimen/user_margin_top_volume"
        android:background="@drawable/pay"
        android:focusable="false" />
    
        <TextView
        android:id="@+id/user_good0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="24dp"
        android:textColor="@android:color/white"
        android:layout_alignParentRight="true"
        android:layout_marginRight="406px"
        android:text="很好"
        android:layout_marginTop="840px"
        android:focusable="false" />

    <TextView
        android:id="@+id/user_good1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="24dp"
        android:textColor="@android:color/white"
        android:layout_alignParentRight="true"
        android:layout_marginRight="406px"
        android:text="好"
        android:layout_marginTop="900px"
        android:focusable="false" />

    <TextView
        android:id="@+id/user_good2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="24dp"
        android:textColor="@android:color/white"
        android:layout_alignParentRight="true"
        android:layout_marginRight="406px"
        android:text="一般"
        android:layout_marginTop="960px"
        android:focusable="false" />
    
    <TextView
        android:id="@+id/user_tds"
        android:layout_width="wrap_content"
        android:layout_height="133px"
        android:layout_marginLeft="394px"
        android:layout_marginTop="802px"
        android:textColor="@android:color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        android:text="1234" />
    
    <ImageView
        android:id="@+id/user_bid0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bid" />

    <ImageView
        android:id="@+id/user_bid1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bid" />

    <ImageView
        android:id="@+id/user_bid2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bid" />

    <ImageView
        android:id="@+id/user_bid3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bid" />

</RelativeLayout>