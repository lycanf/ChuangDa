<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:baselineAligned="false"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="@dimen/main_item_vertical_pandding"
        android:text="Cost:0.00"
        android:textColor="@color/main_item_text_color"
        android:textSize="@dimen/main_item_text_size" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="@dimen/main_item_vertical_pandding"
        android:text="Water:0.00"
        android:textColor="@color/main_item_text_color"
        android:textSize="@dimen/main_item_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="@dimen/main_item_vertical_pandding" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="@dimen/main_item_horizontal_pandding"
            android:text="3L"
            android:textColor="@color/main_item_text_color"
            android:textSize="@dimen/main_item_text_size" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="@dimen/main_item_horizontal_pandding"
            android:text="5L"
            android:textColor="@color/main_item_text_color"
            android:textSize="@dimen/main_item_text_size" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="@dimen/main_item_horizontal_pandding"
            android:text="charge"
            android:textColor="@color/main_item_text_color"
            android:textSize="@dimen/main_item_text_size" />
    </LinearLayout>

    <com.chuangda.widgets.WaterHealthBar
        android:id="@+id/main_health_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingBottom="@dimen/main_item_vertical_pandding"
        android:paddingTop="@dimen/main_item_vertical_pandding" />

</LinearLayout>